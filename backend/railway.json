{
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm run migrate && npm run start",
    "restartPolicyMaxRetries": 5,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100
  },
  "env": {
    "NODE_ENV": "production",
    "JWT_SECRET": {
      "description": "JWT Secret Key",
      "value": ""
    },
    "JWT_REFRESH_SECRET": {
      "description": "JWT Refresh Secret",
      "value": ""
    }
  }
}
